<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="tac.com.appandroidtac.MainActivity"
    android:background="#fcfce3"
    android:elevation="1dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cast_expanded_controller_actionbar_bg_gradient_light"
        android:id="@+id/imgLogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btEntrar"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Visualizar Postos"
            style="@android:style/Widget.Holo.Button"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150px"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:layout_marginTop="10px" />

        <TextView
            android:text="Cadastrar Posto"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCadastrarPosto"
            android:layout_marginTop="50px"
            android:layout_marginLeft="280px"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:clickable="true"
            android:contextClickable="true"
            android:cursorVisible="true" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:lines="1"
        android:id="@+id/txMarquee"
        android:padding="4dp"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:text="Contribua você também! Atualize os preços."
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="14sp"
        android:layout_marginTop="100px" />


</LinearLayout>
